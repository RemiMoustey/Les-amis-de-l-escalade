<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <servlet>
    <servlet-name>Hello</servlet-name>
    <servlet-class>org.projet6.escalade.webapp.servlets.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Sites</servlet-name>
    <servlet-class>org.projet6.escalade.webapp.servlets.SitesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Sites</servlet-name>
    <url-pattern>/sites</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Results</servlet-name>
    <servlet-class>org.projet6.escalade.webapp.servlets.ResultsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Results</servlet-name>
    <url-pattern>/results</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>org.projet6.escalade.webapp.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>org.projet6.escalade.webapp.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Signin</servlet-name>
    <servlet-class>org.projet6.escalade.webapp.servlets.SignInServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Signin</servlet-name>
    <url-pattern>/signin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ValidationInscription</servlet-name>
    <servlet-class>org.projet6.escalade.webapp.servlets.ValidationInscriptionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ValidationInscription</servlet-name>
    <url-pattern>/validation_inscription</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ValidationConnection</servlet-name>
    <servlet-class>org.projet6.escalade.webapp.servlets.ValidationConnectionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ValidationConnection</servlet-name>
    <url-pattern>/validation_connection</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OneSite</servlet-name>
    <servlet-class>org.projet6.escalade.webapp.servlets.OneSiteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OneSite</servlet-name>
    <url-pattern>/one_site</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddSite</servlet-name>
    <servlet-class>org.projet6.escalade.webapp.servlets.AddSiteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddSite</servlet-name>
    <url-pattern>/add_site</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>InsertSite</servlet-name>
    <servlet-class>org.projet6.escalade.webapp.servlets.InsertSiteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InsertSite</servlet-name>
    <url-pattern>/insert_site</url-pattern>
  </servlet-mapping>

  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>

</web-app>
